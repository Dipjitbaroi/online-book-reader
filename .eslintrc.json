{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "showPage": "writable",
    "showBookDetail": "writable",
    "toggleWishlist": "writable",
    "changePage": "writable",
    "handleSearch": "writable",
    "handleGenreFilter": "writable",
    "handlePageSelect": "writable",
    "goBack": "writable",
    "handleCardKeyPress": "writable"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"],
    "prefer-const": ["error"],
    "no-var": ["error"]
  }
}